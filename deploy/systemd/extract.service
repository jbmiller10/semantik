[Unit]
Description=Document Extraction Service
After=manifest.service

[Service]
Type=oneshot
ExecStart=/usr/bin/python3 /root/document-embedding-project/vecpipe/extract_chunks.py \
    --input /var/embeddings/filelist.null \
    --output /opt/vecpipe/extract \
    --batch-size 100
User=root
StandardOutput=journal
StandardError=journal
TimeoutStartSec=3600

[Install]
WantedBy=multi-user.target