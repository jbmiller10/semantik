# CPU-friendly configuration (no CUDA/bitsandbytes required)
# Copy this to .env for CPU-only or basic GPU usage

# -- Authentication Configuration --
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -- Embedding Model Configuration --
USE_MOCK_EMBEDDINGS=false
DEFAULT_EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
# Use float16 for GPU without bitsandbytes, float32 for CPU
DEFAULT_QUANTIZATION=float16

# -- Qdrant Configuration --
DEFAULT_COLLECTION=work_docs

# -- Document Processing Paths --
DOCUMENT_PATH=./documents

# -- Service Configuration --
WEBUI_WORKERS=1

# -- GPU Configuration --
CUDA_VISIBLE_DEVICES=0
MODEL_MAX_MEMORY_GB=8

# -- Logging Configuration --
LOG_LEVEL=INFO

# -- Model Storage Configuration --
HF_CACHE_DIR=./models
# Enable after models are downloaded
HF_HUB_OFFLINE=false